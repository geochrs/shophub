<%- layout('layouts/boilerplate.ejs')%>
<div class="container pt-4">
    <div class="card mb-3 mx-auto shadow-sm" style="max-width: 980px;">
        <div class="row g-2">
            <div class="col-md-4">
                <!-- <img src="../images/iphone14.jpeg" class="img-fluid rounded-start"
                        alt=""> -->
                <div id="camgroundCarousel" class="carousel carousel-dark slide">
                    <div class="carousel-inner py-2">
                        <% product.images.forEach((img, i) => { %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%=img.url%>" class="d-block w-100" alt="...">
                        </div>
                        <% }) %>
                    </div>
                    <% if (product.images.length > 1) { %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#camgroundCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#camgroundCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h4 class="h4 card-title mb-3"><%= product.title %></h4>
                    <p class="card-text text-black-50 mb-4"><%- product.fullDetail %></p>
                    <div class="d-flex justify-content-between">
                        <h4 class="h4 fw-medium"><%= product.price %>&euro;</h4>
                        <form action="/cart" method="POST">
                            <button class="btn btn-secondary"><i class="bi bi-cart-fill"></i> Add
                                to cart</button>
                            <input type="hidden" name="productId" value="<%=product._id%>">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>